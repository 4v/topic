<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyenigma.dao.RolePermissionMapper">

    <select id="findAllByRoleId" parameterType="Integer" resultType="Integer">
        SELECT PERMISSIONID FROM
        ROLEPERMISSION
        WHERE STATUS = 'A' AND ROLEID = #{roleId}
    </select>

    <insert id="insert" parameterType="RolePermission" flushCache="true">
        INSERT INTO ROLEPERMISSION(ROLEID,PERMISSIONID,STATUS,CREATED,LASTMOD,CREATER,MODIFYER)
        VALUES(#{roleId,jdbcType=INTEGER},#{permissionId,jdbcType=INTEGER},#{status,jdbcType=VARCHAR},
        #{created,jdbcType=DATE},#{lastmod,jdbcType=DATE},#{creater,jdbcType=INTEGER},
        #{modifyer,jdbcType=INTEGER})
    </insert>
</mapper>